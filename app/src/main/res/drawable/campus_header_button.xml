<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <gradient android:angle="270" android:startColor="#ff08acde" android:endColor="#ff08acde"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <solid android:color="#58857e"/>
            <gradient android:angle="0" android:startColor="#08BCF1" android:endColor="#08BCF1"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <gradient android:angle="270" android:startColor="#08BCF1" android:endColor="#08BCF1"/>
        </shape>
    </item>
</selector>