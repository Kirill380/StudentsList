<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true">
        <shape android:shape="rectangle" >
            <corners android:radius="5dip" />
            <gradient android:angle="270" android:startColor="#0097A7" android:endColor="#0097A7"/>
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle"  >
            <gradient android:angle="0" android:startColor="#00BCD4" android:endColor="#00BCD4"/>
        </shape>
    </item>
    <item >
        <shape android:shape="rectangle" >
            <corners android:radius="5dip" />
            <gradient android:angle="270" android:startColor="#00BCD4" android:endColor="#00BCD4"/>
        </shape>
    </item>
</selector>